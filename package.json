{
  "name": "@pinceau/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Make your <script> lighter and your <style> smarter.",
  "keywords": [
    "css-in-js",
    "vue",
    "design-tokens",
    "css-variables",
    "typed-styles",
    "nuxt",
    "vite"
  ],
  "homepage": "https://github.com/Tahul/pinceau#readme",
  "bugs": {
    "url": "https://github.com/Tahul/pinceau/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tahul/pinceau.git"
  },
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "pnpm -r --filter=./packages/* run build && pnpm -r run build:post",
    "stub": "pnpm -r --filter=./packages/* run stub && pnpm -r run build:post",
    "dev": "nodemon --exec 'pnpm --filter=./examples/vite-vue3 run dev' --watch 'packages' -e js,ts,vue",
    "test": "pnpm -r --filter=./tests run test",
    "docs": "nuxi dev docs"
  },
  "devDependencies": {
    "unbuild": "^1.2.1",
    "@antfu/eslint-config": "^0.39.8",
    "@types/node": "^20.4.5",
    "@vue/test-utils": "^2.4.1",
    "eslint": "^8.45.0",
    "jsdom": "^22.1.0",
    "nodemon": "^3.0.1",
    "nuxt-vitest": "^0.10.2",
    "playwright": "^1.36.2",
    "release-it": "^16.1.3",
    "rollup": "^3.26.3",
    "tsup": "^7.1.0",
    "typescript": "^5.1.6",
    "unenv": "^1.5.2",
    "vite": "^4.4.7",
    "vite-plugin-inspect": "^0.7.33",
    "vitest": "^0.33.0",
    "vue": "^3.3.4",
    "vue-router": "^4.2.4",
    "webpack": "^5.88.2",
    "storybook": "7.1.1"
  },
  "resolutions": {
    "pinceau": "workspace:*"
  },
  "packageManager": "pnpm@8.6.0",
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "axios": "0.25.0",
        "vue": "^3.3.4",
        "vite": "^4.4.7",
        "vitest": "^0.33.0"
      },
      "ignoreMissing": [
        "postcss",
        "postcss-*",
        "@algolia/client-search",
        "nuxt",
        "vue",
        "@vitejs/plugin-vue",
        "@vitejs/plugin-vue-jsx"
      ]
    }
  },
  "release-it": {
    "hooks": {
      "before:init": [
        "pnpm build"
      ]
    },
    "npm": {
      "access": "public"
    },
    "git": {
      "commitMessage": "chore(release): release v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}"
    }
  }
}
