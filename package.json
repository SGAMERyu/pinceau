{
  "name": "@pinceau/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Make your <script> lighter and your <style> smarter.",
  "keywords": [
    "css-in-js",
    "vue",
    "design-tokens",
    "css-variables",
    "typed-styles",
    "nuxt",
    "vite"
  ],
  "homepage": "https://github.com/Tahul/pinceau#readme",
  "bugs": {
    "url": "https://github.com/Tahul/pinceau/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tahul/pinceau.git"
  },
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "pnpm -r --filter=./packages/* run build && pnpm -r run build:post",
    "stub": "pnpm -r --filter=./packages/* run stub && pnpm -r run build:post",
    "dev": "nodemon --exec 'pnpm --filter=./examples/vite-vue3 run dev' --watch 'packages' -e js,ts,vue"
  },
  "resolutions": {
    "esquery": "1.4.0"
  },
  "dependencies": {
    "@vue/compiler-core": "^3.3.4",
    "acorn": "^8.8.2",
    "ast-types": "^0.16.1",
    "chroma-js": "^2.4.2",
    "consola": "^3.1.0",
    "csstype": "^3.1.2",
    "defu": "^6.1.2",
    "magic-string": "^0.30.0",
    "nanoid": "^4.0.2",
    "ohash": "^1.1.2",
    "pathe": "^1.1.1",
    "postcss": "^8.4.24",
    "postcss-custom-properties": "13.2.0",
    "postcss-dark-theme-class": "0.7.3",
    "postcss-nested": "^6.0.1",
    "recast": "^0.23.2",
    "scule": "^1.0.0",
    "sfc-composer": "^0.0.5",
    "unbuild": "^1.2.1",
    "unplugin": "^1.3.1",
    "untyped": "^1.3.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.39.5",
    "@types/chroma-js": "^2.4.0",
    "@types/node": "^20.3.1",
    "@vue/test-utils": "^2.3.2",
    "buffer": "^6.0.3",
    "eslint": "^8.42.0",
    "esno": "^0.16.3",
    "fast-glob": "^3.2.12",
    "js-confetti": "^0.11.0",
    "jsdom": "^22.1.0",
    "nitropack": "2.4.1",
    "nodemon": "^2.0.22",
    "nuxi": "3.5.3",
    "nuxt": "3.5.3",
    "nuxt-component-meta": "^0.5.3",
    "nuxt-vitest": "^0.8.5",
    "playwright": "^1.35.0",
    "release-it": "^15.11.0",
    "rimraf": "^5.0.1",
    "rollup": "^3.25.1",
    "tsup": "^6.7.0",
    "typescript": "^5.1.3",
    "unenv": "^1.5.1",
    "vite": "^4.3.9",
    "vite-plugin-inspect": "^0.7.28",
    "vitest": "^0.32.0",
    "vue": "^3.3.4",
    "vue-router": "^4.2.2",
    "webpack": "^5.87.0",
    "storybook": "7.0.23"
  },
  "packageManager": "pnpm@8.6.0",
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "axios": "0.25.0",
        "vue": "^3.2.45",
        "vite": "^4.0.0",
        "vitest": "^0.32.0"
      },
      "ignoreMissing": [
        "postcss",
        "postcss-*",
        "@algolia/client-search",
        "nuxt",
        "vue",
        "@vitejs/plugin-vue",
        "@vitejs/plugin-vue-jsx"
      ]
    },
    "overrides": {
      "pinceau": "latest"
    }
  },
  "release-it": {
    "hooks": {
      "before:init": [
        "pnpm build"
      ]
    },
    "npm": {
      "access": "public"
    },
    "git": {
      "commitMessage": "chore(release): release v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}"
    }
  }
}
