{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "jsx": "preserve",
    "types": [
      "node",
      "vite/client",
      "vitest/importMeta"
    ],
    "paths": {
      "pinceau": ["./packages/pinceau/src/index.ts"],
      "@pinceau/nuxt": ["./packages/nuxt/src/index.ts"],
      "@pinceau/runtime": ["./packages/runtime/src/index.ts"],
      "@pinceau/shared": ["./packages/shared/src/index.ts"],
      "@pinceau/style": ["./packages/style/src/index.ts"],
      "@pinceau/theme": ["./packages/theme/src/index.ts"],
      "@pinceau/volar": ["./packages/volar/src/index.ts"],
      "@pinceau/vue": ["./packages/vue/src/rules.ts"],
      "#pinceau/theme": ["./packages/data/index.ts"],
      "#pinceau/utils": ["./packages/data/utils.ts"],
      "#pinceau/schema": ["./packages/data/schema.ts"],
      "pinceau.css": ["./packages/data/theme/index.css"]
    }
  },
  "exclude": [
    "**/dist/**",
    "**/node_modules/**",
    "**/playground/**",
    "**/examples/**",
    "**/fixtures/**",
    "**/test/dts/**"
  ]
}
